# Strategic Pillars: normalize legacy/legacy-encoded and lowercase URLs
RewriteRule ^political-strategic-engagement/?$ Political-strategic-engagement.html [L]
RewriteRule ^social-charitable-impact/?$ charitable-social-impact.html [L]

RewriteRule ^Political%20&%20strategic%20engagement\.html$ /Political-strategic-engagement.html [R=301,L,NC]
RewriteRule ^bilateral%20trade%20&%20business\.html$ /bilateral-trade-business.html [R=301,L,NC]
RewriteRule ^charitable%20&%20social%20impact\.html$ /charitable-social-impact.html [R=301,L,NC]

# 1. Handle Home Page (Root)
DirectoryIndex home.html
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\ /home\.html\ HTTP/
RewriteRule ^home\.html$ / [R=301,L]

# 2. Force Remove .html from any URL
RewriteCond %{THE_REQUEST} \s/+(.*?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# 3. Internally link clean URL to .html file
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]
